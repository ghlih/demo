<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- （1）配置mysql 驱动jar包路径.用了绝对路径 -->
    <!-- <classPathEntry location=
                             "G:\0-maven\repository-BD\repository\mysql\mysql-connector-java\5.1.38\mysql-connector-java-5.1.38.jar" />-->

    <context id="hwali_mysql_tables" targetRuntime="MyBatis3">
        <!-- 防止生成的代码中有很多注释，加入下面的配置控制 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <!-- <property name="suppressDate" value="true" />-->
        </commentGenerator>

        <!-- （2）数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://101.132.185.43:3306/vhr"
                        userId="hwali"
                        password="hwali">
        </jdbcConnection>

        <!-- 默认 false，把 JDBCDECIMAL 和 NUMERIC 类型解析为 Integer，
        为 true 时把 JDBCDECIMAL 和 NUMERIC 类型解析为 java.math.BigDecimal-->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- （3）数据表对应的model层  targetProject:生成 Entity 类的路径 -->
        <javaModelGenerator targetPackage="cn.hwali.hr.model"
                            targetProject="src\main\java">
            <!--enableSubPackages:是否让 schema 作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- (4)sql mapper 映射配置文件 -->
        <sqlMapGenerator targetPackage="cn.hwali.hr.mapper"
                         targetProject="src\main\java">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- (5)mybatis3中的mapper接口 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="cn.hwali.hr.mapper"
                             targetProject="src\main\java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- (6)数据库表名字和我们的entity类对应的映射指定
             不生成example类：
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="false"
        -->
        <table tableName="mnt_database" domainObjectName="MntDatabase"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="false"/>
        <!-- <table tableName="t_admin" domainObjectName="Admin"/>
         <table tableName="t_role" domainObjectName="Role"/>
         <table tableName="t_menu" domainObjectName="Menu"/>
         <table tableName="t_auth" domainObjectName="Auth"/>-->
    </context>
</generatorConfiguration>
